{% extends 'TriebawerkeUserBundle::layout.html.twig' %}

{% block title %}Skillerator{% endblock %}

{% block content_header '' %}

{% block content %}
<h1>Company list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Street</th>
            <th>City</th>
            <th>Web</th>
            <th>users</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('company_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.street }}</td>
            <td>{{ entity.city }}</td>
            <td>{{ entity.web }}</td>
            <td>{{ entity.users.name }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('company_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('company_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('company_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}