{% extends "TriebawerkeSkilleratorBundle::layout.html.twig" %}

{% block title %}Skillerator{% endblock %}

{% block content %}
<h1>Company list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Name</th>
            <th>Street</th>
            <th>City</th>
            <th>Web</th>
            <th>Actions</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
    {% for company in entities.company %}
        <tr>
            <td>{{company.name}}</td>
            <td>{{company.street}}</td>
            <td>{{company.city}}</td>
            <td>{{company.web}}</td>
            <td>
                <a href="{{ path('company_show', { 'id': company.id }) }}">show</a>
            </td>
            <td>
                <a href="{{ path('company_edit', { 'id': company.id }) }}">edit</a>
            </td>
        </tr>
        {% for team in company.teams %}
        <tr>
            <td class="subrow">team:</td>            
            <td class="subrow">{{team.name}}</td>
            <td class="subrow">{{team.nickname}}</td>
        </tr>
        {% endfor %}
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('company_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}