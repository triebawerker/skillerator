{% extends "TriebawerkeSkilleratorBundle::layout.html.twig" %}

{% block title "Skillerator" %}

{% block content %}
<h1>My account</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Name</th>
            <th>Lastname</th>
            <th>Company</th>
            <th>Actions</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>

        <tr>
            <td>{{ entity.username }}</td>
            <td>{{ entity.email }}</td>
            <td><a href="{{ path('user_show') }}">show</a></td>
            <td><a href="{{ path('user_edit') }}">edit</a></td>
        </tr>

    </tbody>
</table>


<h1>Companies I am associated with</h1>
<table class="records_list">
    <thead>
        <tr>
            <th>Company</th>
        </tr>
    </thead>
    <tbody>
    {%  for company in entity.company%}
        <tr>
            <td>{{ company.name }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('user_edit') }}">
            Edit your data
        </a>
    </li>
</ul>
{% endblock %}