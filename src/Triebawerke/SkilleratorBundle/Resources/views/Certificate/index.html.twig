{% extends 'TriebawerkeSkilleratorBundle::layout.html.twig' %}

{% block title %}Skillerator{% endblock %}

{% block content %}
<h1>Certificates</h1>
<ul>
    <li><a href="{{ path('certificate_new') }}">Create a new certificate</a></li>
</ul>
<table class="records_list">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.name }}</td>
            <td>{{ entity.description }}</td>
            <td><a href="{{ path('certificate_show', { 'id': entity.id }) }}">show</a></td>
            <td><a href="{{ path('certificate_edit', { 'id': entity.id }) }}">edit</a></td>       
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
