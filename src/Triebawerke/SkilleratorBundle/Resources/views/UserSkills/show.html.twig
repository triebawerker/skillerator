{% extends 'TriebawerkeSkilleratorBundle::layout.html.twig' %}

{% block title %}Skillerator{% endblock %}

{% block content %}
<h1>UserSkills</h1>
<p> Skills for user: {{ entity.users.name }} {{ entity.users.lastname }}</p>
<table class="record_properties">
    <tbody>
        <tr><th>Id</th><td>{{ entity.skills.id }}</td>
        <tr><th>Skill</th><td>{{ entity.skills.name }}</td>
        <tr><th>Description</th><td>{{ entity.skills.description }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('userskills') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('userskills_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('userskills_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}